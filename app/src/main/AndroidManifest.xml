<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.bookdb">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <provider
            android:name=".data.BookProvider"
            android:authorities="com.example.android.bookdb"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".other_activies.BookInfo"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".other_activies.BookEdit"
            android:parentActivityName=".MainActivity"/>
        <activity android:name=".other_activies.Credits"
            android:parentActivityName=".MainActivity"/>
    </application>

</manifest>